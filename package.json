{
  "name": "@urbica/ui-kit",
  "version": "0.1.0",
  "description": "Urbica UI Kit",
  "author": "Stepan Kuzmin <stepan@urbica.co>",
  "contributors": ["Stepan Kuzmin <stepan@urbica.co>"],
  "repository": "git@github.com:urbica/ui-kit.git",
  "license": "MIT",
  "main": "dist/ui-kit.js",
  "scripts": {
    "start": "npm run styleguide",
    "lint": "eslint src test",
    "typecheck": "flow check src",
    "typecheck:coverage": "flow-coverage-report -i 'src/**/*.js' -t html",
    "test": "jest",
    "test:coverage": "jest --coverage && codecov",
    "build": "webpack -p --config webpack.config.js",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "styleguide:deploy": "gh-pages -m 'auto commit [ci skip]' -d styleguide",
    "commit": "git-cz",
    "release": "npm run build && standard-version",
    "prepublish": "npm run build",
    "postpublish": "npm run styleguide:build && npm run styleguide:deploy"
  },
  "jest": {
    "setupFiles": ["<rootDir>/jest.setup.js"]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "emotion": "8.0.12",
    "react-emotion": "8.0.12"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.3",
    "babel-jest": "22.0.1",
    "babel-loader": "7.1.2",
    "babel-plugin-emotion": "8.0.12",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "codecov": "3.0.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.0",
    "eslint": "4.13.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-flowtype": "2.40.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.5.1",
    "extract-text-webpack-plugin": "3.0.2",
    "flow-bin": "0.61.0",
    "flow-coverage-report": "0.4.0",
    "gh-pages": "1.1.0",
    "jest": "22.0.2",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-docgen": "2.20.0",
    "react-dom": "16.2.0",
    "react-styleguidist": "6.1.0",
    "standard-version": "4.2.0",
    "webpack": "3.10.0",
    "webpack-bundle-analyzer": "2.9.1"
  }
}
